<div class="col-md-6 col-sm-12 mt-5">
  <div class="card">
    <h5 class="card-header">Following friends</h5>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
          </tr>
          </thead>
          <tbody>
          <% @followed_friends.each do |friend| %>
            <tr>
              <td><%= friend.full_name %></td>
              <td><%= link_to 'View Profile', user_path(friend),
                              class: 'btn btn-sm btn-success' %>
                <%= button_to "Unfollow", friendship_path(friend),
                                method: :delete,
                                data: { turbo: false },
                                class: 'btn btn-sm btn-warning',
                                form_class: 'd-inline-block'%></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>